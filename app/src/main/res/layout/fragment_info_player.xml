<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/spacing_normal_16">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="200dp"
                tools:src="@color/colorStar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_rating_1_0"
                    android:layout_marginLeft="@dimen/spacing_small_8"
                    android:orientation="vertical"
                    tools:ignore="UnknownIdInLayout">

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_huge_24"
                        android:maxLines="1"
                        tools:text="S1mple" />

                    <TextView
                        android:id="@+id/tv_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_large_20"
                        android:maxLines="1"
                        tools:text="Aleksandr Kostyliev" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/startProPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    app:layout_constraintLeft_toRightOf="@+id/ll_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ll_title"
                    app:layout_constraintBottom_toBottomOf="@+id/ll_title"
                    android:layout_gravity="left|center"
                    android:progressTint="@color/colorStar"
                    android:rating="5.0"/>

                <LinearLayout
                    android:id="@+id/ll_stats_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_title"
                    app:layout_constraintBottom_toTopOf="@id/ll_stats_line_2"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_title"
                        android:layout_marginLeft="@dimen/spacing_small_8"
                        android:orientation="vertical"
                        tools:ignore="UnknownIdInLayout"
                        android:layout_margin="@dimen/spacing_normal_16">

                        <TextView
                            android:id="@+id/tv_rating_2_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16"
                            android:layout_gravity="center"
                            tools:text="1.28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small_12"
                            android:layout_gravity="center"
                            android:text="rating 1.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_title"
                        android:layout_marginLeft="@dimen/spacing_small_8"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_normal_16">

                        <TextView
                            android:id="@+id/tv_dpr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16"
                            android:layout_gravity="center"
                            tools:text="1.28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small_12"
                            android:layout_gravity="center"
                            android:text="rating 1.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_title"
                        android:layout_marginLeft="@dimen/spacing_small_8"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_normal_16">

                        <TextView
                            android:id="@+id/tv_kast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16"
                            android:layout_gravity="center"
                            tools:text="1.28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small_12"
                            android:layout_gravity="center"
                            android:text="rating 1.0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_stats_line_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_stats_line_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_title"
                        android:layout_marginLeft="@dimen/spacing_small_8"
                        android:orientation="vertical"
                        tools:ignore="UnknownIdInLayout"
                        android:layout_margin="@dimen/spacing_normal_16">

                        <TextView
                            android:id="@+id/tv_rating_impact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16"
                            android:layout_gravity="center"
                            tools:text="1.28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small_12"
                            android:layout_gravity="center"
                            android:text="rating 1.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_title"
                        android:layout_marginLeft="@dimen/spacing_small_8"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_normal_16">

                        <TextView
                            android:id="@+id/tv_adr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16"
                            android:layout_gravity="center"
                            tools:text="1.28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small_12"
                            android:layout_gravity="center"
                            android:text="rating 1.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_title"
                        android:layout_marginLeft="@dimen/spacing_small_8"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/spacing_normal_16">

                        <TextView
                            android:id="@+id/tv_kpr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16"
                            android:layout_gravity="center"
                            tools:text="1.28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_small_12"
                            android:layout_gravity="center"
                            android:text="rating 1.0" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal_16"




            tools:text="Алекса́ндр Оле́гович Ко́стылев (укр. Олександр Олегович Костилєв; род. 2 октября 1997, Киев, Украина) — профессиональный украинский киберспортсмен, также известный как s1mple. Играет в команде Natus Vincere. Лучший игрок 2018 года в дисциплине Counter-Strike: Global Offensive по версии портала HLTV.org[1]."
            />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>